
@{
    ViewBag.Title = "AllComment";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model List<DTO.CommentDTO>
<section class="content-header">
    <h1>All Comment List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Comments</a></li>
        <li class="breadcrumb-item"><a>All Comments list</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/Comment/UnapprovedComments'">Unapproved Comments List</button>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Post Title</th>
                    <th>Comment Content</th>
                    <th>Email</th>
                    <th>Add Date</th>
                    <th>Approve</th>
                    <th>Delete</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>

                    <tr id="a_@item.ID">

                        <td>
                            @item.PostTitle
                        </td>
                        <td>
                            @item.CommentContent
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.AddDate.ToString("dd.MM.yy");
                        </td>
                        @if (!item.isApproved)
                        {
                            <td align="center" valign="middle">
                                <a href="/Admin/Comment/ApproveComment2/@item.ID">
                                    <br />
                                    <img style="width: 40px; height: 40px;margin-left:20px; transform: translate(-50%, -50%);" src="~/Areas/Admin/Content/Icon/tick_icon.png" />

                                </a>
                            </td>

                        }
                        else
                        {
                            <td>
                                Approved
                            </td>
                        }
                        <td align="center" valign="middle">
                            <a href="#">
                                <br />
                                <img style="width: 40px; height: 40px; margin-left: 20px; transform: translate(-50%, -50%); " src="~/Areas/Admin/Content/Icon/Delete-icon.png" onclick="AskQuestion('/Admin/Comment/DeleteComment/',@item.ID)" />
                            </a>
                        </td>
                    </tr>

                </tbody>
            }

            <tfoot>
                <tr>
                    <th>Post Title</th>
                    <th>Comment Content</th>
                    <th>Email</th>
                    <th>Add Date</th>
                    <th>Approve</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>

<!-- /.card -->
